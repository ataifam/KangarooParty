@{
    @model List<KangarooParty.Models.Party>
    <h1>Parties</h1>

    @if (Model != null)
    {
        <div class="container text-center">
            <div class="row justify-content-evenly">
                @foreach (Party p in Model)
                {
                    <div class="col-auto">
                        <div class="card" style="width: 18rem;">
                            <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><a asp-controller="Party" asp-action="PartyInfo" asp-route-id="@p.Id">@p.Host.Name's Party</a></h5>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Level @p.Prestige</li>
                                <li class="list-group-item">@p.Attendees.Count() Guest Kangaroos</li>
                            </ul>
                        </div>
                        <br />
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <h3>No parties in progress! Create a party <a class="nav-link text-dark" asp-area="" asp-controller="Kangaroo" asp-action="Create">here</a>!</h3>
    }
}