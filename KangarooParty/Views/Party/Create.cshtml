@{
    @model KangarooParty.Models.CreatePartyModel

    <div class="container text-center">
        <div class="row justify-content-between">
            <div class="col-4">
                <h1>Create a Party!</h1>
            </div>
            <div class="col-2">
                <ul class="nav nav-underline">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Party" asp-action="Index">All</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Party" asp-action="Create">Create</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br />

    @if (ViewBag.Kangaroos != null)
    {
        <form method="post">
            <div class="mb-3 row">
                <label for="host" class="col-sm-2 col-form-label">Host</label>
                <div class="col-sm-10">
                    <select class="form-select" asp-for="HostId" asp-items="ViewBag.Kangaroos" required></select>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mb-3">Submit</button>
        </form>
    }
    else
    {
        <h3>Create a Kangaroo <a class="nav-link text-dark" asp-area="" asp-controller="Kangaroo" asp-action="Create">here</a> to start a party!</h3>
    }

}