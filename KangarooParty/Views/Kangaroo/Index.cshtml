@{
    @model List<KangarooParty.Models.Kangaroo>
    <h1>Kangaroos</h1>

    @if (Model != null)
    {
        <div class="container text-center">
            <div class="row justify-content-evenly">
                @foreach (Kangaroo k in Model)
                {
                    <div class="col-auto">
                        <div class="card" style="width: 18rem;">
                            <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><a asp-controller="Kangaroo" asp-action="KangarooInfo" asp-route-id="@k.Id">@k.Name</a></h5>
                            </div>
                            <ul class="list-group list-group-flush">
                                @if (k.HostingParty != null)
                                {
                                    <li class="list-group-item">@k.Name's party</li>
                                }
                            </ul>
                        </div>
                        <br />
                    </div>
                }
            </div>
        </div>
    } else
{
                        <h3>Create a Kangaroo <a class="nav-link text-dark" asp-area="" asp-controller="Kangaroo" asp-action="Create">here</a>!</h3>
}
}

