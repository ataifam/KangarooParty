@{
    @model List<KangarooParty.Models.Kangaroo>
    <h1>Kangaroos</h1>

    <div class="container text-center">
        <div class="row align-items-start">
            @{int ColCounter = 0;}
            @foreach (Kangaroo k in Model)
                {
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <img src="..." class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@k.Name</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            @if (k.HostingParty != null)
                                {
                                <li class="list-group-item">@k.Name's party</li>
                            }
                        </ul>
                    </div>
                </div>
                //start new row once 3 cards occupy current
                @if(++ColCounter == 3)
                {
                    <div class="w-100"></div>
                    <br />
                    ColCounter = 0;
                }
             }
        </div>
        </div>
        }

